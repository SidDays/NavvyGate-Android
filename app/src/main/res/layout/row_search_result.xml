<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayoutPlaceClick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewPlaceIcon"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:padding="8dp"
            app:srcCompat="@drawable/place_icon_generic" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPlaceName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="USC Dedeaux Stadium"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/textViewPlaceAddress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="1031 Child's Way, Los Angeles" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewFavoriteStatus"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/heart_outline_black" />
</LinearLayout>
